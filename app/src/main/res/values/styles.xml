<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAccent</item>  <!--toolbar-->
        <item name="android:textColorPrimary">@android:color/holo_orange_dark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <!--屏蔽原有的ancion bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@android:color/white</item><!-- statusbar,tips:conflict the android:statusbarcolor -->
        <item name="android:textColorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@color/colorAccent</item> <!--Control the color of android widget-->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowAnimationStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
